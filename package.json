{
  "name": "smitty",
  "version": "1.3.0",
  "description": "Tiny flux implementation built on mitt",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
